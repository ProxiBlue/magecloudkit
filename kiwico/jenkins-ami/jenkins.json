{
  "min_packer_version": "0.12.0",
  "variables": {
    "aws_region": "us-west-1",
    "base_ami_name": "jenkins"
  },
  "builders": [{
    "name": "ubuntu-ami",
    "ami_name": "{{user `base_ami_name`}}-ubuntu-{{isotime | clean_ami_name}}",
    "ami_description": "An Ubuntu 16.04 AMI with Jenkins installed.",
    "instance_type": "t2.medium",
    "region": "{{user `aws_region`}}",
    "vpc_id": "vpc-05842ecf3f920b1eb",
    "subnet_id": "subnet-06ffcebf7d9b9e7e0",
    "associate_public_ip_address": true,
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*ubuntu-xenial-16.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu"
  }, {
    "name": "ubuntu-docker",
    "type": "docker",
    "image": "brightfame/ubuntu-dev:16.04",
    "pull": false,
    "commit": true,
    "run_command": ["-d", "-i", "-t", "{{.Image}}", "/sbin/init"],
    "privileged": true,
    "volumes": {
      "/sys/fs/cgroup": "/sys/fs/cgroup"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "pause_before": "5s",
    "inline": [
      "DEBIAN_FRONTEND=noninteractive sudo apt-get update",
      "sudo apt-get install -y git mysql-client-5.7 redis-tools"
    ],
    "only": ["ubuntu-docker"]
  }, {
    "type": "shell",
    "pause_before": "30s",
    "inline": [
      "DEBIAN_FRONTEND=noninteractive sudo apt-get update",
      "sudo apt-get install -y jq curl git python-pip binutils nfs-common",
      "sudo -H pip install --upgrade awscli"
    ],
    "only": ["ubuntu-ami"]
  }, {
    "type": "shell",
    "inline": [
      "git clone https://github.com/aws/efs-utils /tmp/efs-utils",
      "cd /tmp/efs-utils && ./build-deb.sh",
      "sudo apt-get -y install /tmp/efs-utils/build/amazon-efs-utils*deb"
    ],
    "only": ["ubuntu-ami"]
  }, {
    "type": "shell",
    "inline": [
      "mkdir -p /tmp/brightfame",
      "mkdir -p /tmp/kiwico"
    ]
  }, {
    "type": "file",
    "source": "{{template_dir}}/php.ini",
    "destination": "/tmp/kiwico/php.ini"
  }, {
    "type": "file",
    "source": "{{template_dir}}/../../modules/security/auto-update",
    "destination": "/tmp/brightfame"
  }, {
    "type": "file",
    "source": "{{template_dir}}/../../modules/ci/aws/",
    "destination": "/tmp/brightfame"
  }, {
    "type": "file",
    "source": "{{template_dir}}/../../modules/ci/helpers/",
    "destination": "/tmp/brightfame"
  }, {
    "type": "shell",
    "inline": [
      "/tmp/brightfame/auto-update/install.sh",
      "/tmp/brightfame/install-php/install-php70 --php-ini /tmp/kiwico/php.ini",
      "/tmp/brightfame/install-jenkins/install-jenkins"
    ]
  }],
  "post-processors": [{
    "type": "docker-tag",
    "repository": "brightfame/jenkins-ubuntu-test",
    "tag": "latest",
    "only": ["ubuntu-docker"]
  }]
}
