{
  "min_packer_version": "0.12.0",
  "variables": {
    "aws_region": "us-east-1",
    "base_ami_name": "magecloudkit"
  },
  "builders": [{
    "name": "ubuntu-ami",
    "type": "amazon-ebs",
    "ami_name": "{{user `base_ami_name`}}-ubuntu-{{isotime | clean_ami_name}}",
    "region": "{{user `aws_region`}}",
    "instance_type": "c5.large",
    "ssh_username": "ubuntu",
    "ami_name": "magecloudkit-app {{timestamp}}",
    "ena_support": true,
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*ubuntu-xenial-16.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "tags": {
      "Name": "MageCloudKitApp"
    }
  }, {
    "name": "ubuntu-docker",
    "type": "docker",
    "image": "brightfame/ubuntu-dev:16.04",
    "commit": true,
    "run_command": ["-d", "-i", "-t", "{{.Image}}", "/sbin/init"],
    "privileged": true,
    "volumes": {
      "/sys/fs/cgroup": "/sys/fs/cgroup"
    }
  }],
  "provisioners": [{
      "type": "shell",
      "execute_command": "echo {{user `ssh_username`}} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "mkdir -p /ops",
        "chmod a+w /ops"
      ]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/root",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/start.sh"
      ],
      "execute_command": "echo ubuntu | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "execute_command": "echo {{user `ssh_username`}} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "chmod +x /usr/local/bin/bootstrap",
        "chmod +x /usr/local/bin/if-addr"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/base.sh"
      ],
      "execute_command": "echo ubuntu | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/bootstrap.sh"
      ],
      "execute_command": "echo ubuntu | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/docker.sh"
      ],
      "execute_command": "echo ubuntu | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/ecs.sh"
      ],
      "execute_command": "echo ubuntu | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/stop.sh"
      ],
      "execute_command": "echo ubuntu | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ],
  "post-processors": [{
    "type": "docker-tag",
    "repository": "gruntwork/couchbase-ubuntu-test",
    "tag": "latest",
    "only": ["ubuntu-docker"]
  }]
}
