[Unit]
Description=Setup Network Environment
Documentation=https://github.com/kelseyhightower/setup-network-environment
Requires=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/bash -c "/bin/echo -n AWS_AZ=`curl -s http://169.254.169.254/latest/meta-data/placement/availability-zone` > /etc/aws-environment"
